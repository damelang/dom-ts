<!DOCTYPE test SYSTEM "dom3.dtd" [
  <!ENTITY % entities SYSTEM "dom3tests.ent">
  %entities;
]>


<test xmlns="&level3;" name="ElementLSTest0">
  <metadata>
    <title>ElementLS</title>
    &creator; 
    <description>Simple ElementLS test, markupContent is tested to contain the right value, markupContent is replaced, this should be parsed, new tree is tested</description> 
    &contributor; &date;
    <subject resource="&spec;#LS-Interfaces-ElementLS"/>
  </metadata>

  <var name="elementList" type="NodeList"/>
  <var name="myString"   type="DOMString" value="&quot;&lt;?xml version='1.0'?&gt;&lt;elt0&gt;&lt;elt0/&gt;&lt;/elt0&gt;&quot;"/>
  <var name="newContent" type="DOMString" value="&quot;&lt;elt1/&gt;&quot;"/>
  <var name="root"       type="Element"/>
  <var name="elementLS"  type="ElementLS"/>
  <var name="content"    type="DOMString"/>

  &vars;
  &init;

  <stringData obj="inputSource" value="myString" interface="DOMInputSource"/> 
  <parse var="document" obj="builder" is="inputSource"/>

  <getElementsByTagName interface="Document" obj="document" tagname="&quot;elt0&quot;" var="elementList"/>
  <assertSize collection="elementList" size="2" id="elt0Count_1"/>

  <documentElement obj="document" var="root"/>
  <assign var="elementLS" value="root"/>
  
  <markupContent var="content" obj="elementLS"/>

  <assertTrue id="content_1">
      <contains obj="content" substring='"elt0"'/>
  </assertTrue>
 
  <markupContent obj="elementLS" value="newContent"/>

  <getElementsByTagName interface="Document" obj="document" tagname="&quot;elt0&quot;" var="elementList"/>
  <assertSize collection="elementList" size="1" id="elt0Count_2"/>

  <getElementsByTagName interface="Document" obj="document" tagname="&quot;elt1&quot;" var="elementList"/>
  <assertSize collection="elementList" size="1" id="elt1Count_1"/>

</test>





