<!DOCTYPE test SYSTEM "dom3.dtd" [
  <!ENTITY % entities SYSTEM "dom3tests.ent">
  %entities;
]>


<test xmlns="&level3;" name="DocumentLSTest4">
  <metadata>
    <title>DocumentLS</title>
    &creator; 
    <description>tests DocumentLS.saveXML, default config is used for saveXML. Default content is therefore discarded</description> 
    &contributor; &date;
    <subject resource="&spec;#LS-Interfaces-DocumentLS"/>
  </metadata>

  <var name="documentls"   type="DocumentLS"/>
  <var name="result"       type="boolean"/>
  <var name="elementList"  type="NodeList"/>
  <var name="stringResult" type="DOMString"/>
  <var name="attr1"        type="DOMString"/>
  <var name="elt1"         type="Element"/>

  &vars;
  &init;


  <!-- first a normal parse-->
  <parseURI  var="document" obj="builder" uri="TEST0"/>

  <!-- now use the document.load interface to replace the document-->
  <assign var="documentls" value="document"/>
  <load var="result" obj="documentls" uri="TEST3" interface="DocumentLS"/>

  <getElementsByTagName interface="Document" obj="document" tagname="&quot;elt1&quot;" var="elementList"/>
  <item interface="NodeList" obj="elementList" var="elt1" index="0"/>

  <getAttribute obj="elt1" var="attr1" name="&quot;attr1&quot;"/>
  <assertEquals actual="attr1" expected='"attr1"' ignoreCase="false" id="attrib1"/>

  <saveXML var="stringResult" obj="documentls" node="document" interface="DocumentLS"/>
  

  <assertFalse id="discard_default_content_1">
      <contains obj="stringResult" substring='"attr1="'/>
  </assertFalse>
 
  <assertFalse id="discard_default_content_2">
      <contains obj="stringResult" substring='"attr1 ="'/>
  </assertFalse>

</test>





