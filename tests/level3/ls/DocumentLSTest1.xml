<!DOCTYPE test SYSTEM "dom3.dtd" [
  <!ENTITY % entities SYSTEM "dom3tests.ent">
  %entities;
]>


<test xmlns="&level3;" name="DocumentLSTest1">
  <metadata>
    <title>DocumentLS</title>
    &creator; 
    <description>Test return value on a load of a non well-formed document</description> 
    &contributor; &date;
    <subject resource="&spec;#LS-Interfaces-DocumentLS"/>
  </metadata>

  <var name="documentls"   type="DocumentLS"/>
  <var name="result"       type="boolean"/>
  <var name="elementList"  type="NodeList"/>
  <var name="mystring"     type="DOMString" value="&quot;&lt;elt0&gt;&quot;"/>

  &vars;
  &init;


  <!-- first a normal parse-->
  <parseURI  var="document" obj="builder" uri="TEST0"/>
  <getElementsByTagName interface="Document" obj="document" tagname="&quot;elt1&quot;" var="elementList"/>
  <assertSize collection="elementList" size="2" id="count_elt1_1"/>

  <assign var="documentls" value="document"/>
  <loadXML var="result" obj="documentls" source="mystring"/>

  <assertFalse actual="result" id="non_well_formed_load_should_fail"/>

</test>





