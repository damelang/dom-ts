<?xml version="1.0" standalone="no"?>

<!DOCTYPE test [
  <!ENTITY % entities SYSTEM "dom3tests.ent">
  %entities;
]>


<test xmlns="&level3;" name="builderfilter">
  <metadata>
    <title>attrSpecifiedValue</title>
    &creator; 
    <description>DOM Builder Filter test</description> 
    &contributor; &date;
    <subject spec="&spec;#LS-Interfaces-DOMBuilderFilter"/>
  </metadata>
  &vars;

  <var name="myfilter"         type="DOMBuilderFilter"> 
     <var name="name"            type="String"/>

     <startElement elt="element">
        <nodeName var="name" obj="element"/>
        <if>
            <equals actual="name" expected='"elt2"' ignoreCase="false"/>
            <return value="&FILTER_REJECT;"/>            
          <else>
            <return value="&FILTER_ACCEPT;"/>            
          </else>
        </if>
     </startElement>


     <acceptNode/>
     <whatToShow>            
        <return value="&SHOW_ELEMENT;"/>
     </whatToShow>

  </var>

  &init;
  &builder.setFilter_myfilter;

  <parseURI  var="document" obj="builder" uri="testfile1"/>

</test>





