<!DOCTYPE test SYSTEM "dom3.dtd" [
  <!ENTITY % entities SYSTEM "dom3tests.ent">
  %entities;
]>


<test xmlns="&level3;" name="DocumentLSTest3">
  <metadata>
    <title>DocumentLS</title>
    &creator; 
    <description>Test whether abort on DocumentLS has no effect on synchronous load, implicitely tests whether sync mode is the default</description> 
    &contributor; &date;
    <subject resource="&spec;#LS-Interfaces-DocumentLS"/>
  </metadata>

  <var name="documentls"   type="DocumentLS"/>
  <var name="result"       type="boolean"/>
  <var name="elementList"  type="NodeList"/>

  &vars;
  &init;


  <!-- first a normal parse-->
  <parseURI  var="document" obj="builder" uri="TEST0"/>
  <getElementsByTagName interface="Document" obj="document" tagname="&quot;elt1&quot;" var="elementList"/>
  <assertSize collection="elementList" size="2" id="count_elt1_1"/>

  <!-- now use the document.load interface to replace the document-->
  <assign var="documentls" value="document"/>
  <load var="result" obj="documentls" uri="TEST1" interface="DocumentLS"/>
  
  <!-- abort should have no effect -->
  <abort obj="documentls" interface="DocumentLS"/>

  <!-- resulting doc should have only 1 elt1 now -->
  <getElementsByTagName interface="Document" obj="document" tagname="&quot;elt1&quot;" var="elementList"/>
  <assertSize collection="elementList" size="1" id="count_elt1_2"/>


</test>





