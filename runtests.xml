<!--  This ant file runs the tests againsts various implementations
          and creates a report of all test failures    -->

<!--
$Log: runtests.xml,v $
Revision 1.3  2003-12-23 03:25:31  dom-ts-4
Extends results matrix to L2 Core (bug 446)

Revision 1.2  2003/12/10 10:30:35  dom-ts-4
L3 Core fixups (Bug 404)

Revision 1.1  2003/12/08 07:50:50  dom-ts-4
L&S support for Oracle XDK 10.0.1.0A, metadata fixes, test results matrix (bug 396)


-->
<project default="usage" basedir=".">
	<property name="build.dir" location="build"/>
    <property name="xdk.lib.dir" location="/xdk_10/lib"/>
    <property name="xerces.build.dir" location="../xerces/java/build"/>
    
<target name="usage">
	<echo message="common targets:"/>
    <echo message="TODO"/>
</target>


<target name="run-xerces">
	<property name="level" value="1"/>
	<property name="module" value="core"/>
	<property name="config" value=""/>
	<junit fork="true">
		<classpath>
			<pathelement path="${xerces.build.dir}/dom3-xml-apis.jar"/>
			<pathelement path="${xerces.build.dir}/dom3-xercesImpl.jar"/>
			<pathelement path="${build.dir}/dom${level}-${module}.jar"/>
			<pathelement path="${build.dir}/junit-run.jar"/>
		</classpath>
		<formatter type="xml"/>
		<test name="org.w3c.domts.level${level}.${module}.TestXerces${config}" 
			todir="${build.dir}" 
			outfile="dom${level}-${module}-xerces${config}"/>
	</junit>
</target>


<target name="run-oracle">
	<property name="level" value="1"/>
	<property name="module" value="core"/>
	<property name="jarname" value="dom${level}-${module}.jar"/>
	<property name="config" value=""/>
	<junit fork="true">
		<classpath>
			<fileset dir="${xdk.lib.dir}" includes="xmlparserv2.jar"/>
			<fileset dir="${build.dir}" includes="${jarname} junit-run.jar"/>
		</classpath> 
		<formatter type="xml"/>
		<test name="org.w3c.domts.level${level}.${module}.TestOracle${config}" 
			todir="${build.dir}" 
			outfile="dom${level}-${module}-oracle${config}"/>
	</junit>
</target>

<target name="dom2-core-oracle">
	<antcall target="run-oracle">
		<param name="level" value="2"/>
		<param name="module" value="core"/>
	</antcall>
</target>

<target name="dom2-core-oracle-alt">
	<antcall target="run-oracle">
		<param name="level" value="2"/>
		<param name="module" value="core"/>
		<param name="config" value="AltConfig"/>
	</antcall>
</target>

<target name="dom2-core-xerces">
	<antcall target="run-xerces">
		<param name="level" value="2"/>
		<param name="module" value="core"/>
	</antcall>
</target>

<target name="dom2-core-xerces-alt">
	<antcall target="run-xerces">
		<param name="level" value="2"/>
		<param name="module" value="core"/>
		<param name="config" value="AltConfig"/>
	</antcall>
</target>

<target name="dom2-core-results" depends="dom2-core-xerces, dom2-core-xerces-alt, dom2-core-oracle,dom2-core-oracle-alt">
    <mkdir dir="${build.dir}"/>
	<style in="${build.dir}/dom2-core-metadata.rdf" 
		   out="${build.dir}/dom2-core-results.html" 
	       style="transforms/results-matrix.xsl" force="true">
		<param name="specURI"
		       expression="http://www.w3.org/TR/DOM-Level-2-Core/core#"/>
        <param name="interfacesURL" expression="dom2-interfaces.xml"/>
        <param name="specMetadataURL" expression="dom2-core-subjects.xml"/>
        <param name="title" expression='DOM Level 2 Core Test Results'/>
        <param name="resultsURL" expression="../transforms/dom2-core-results.xml"/>
	</style>
</target>



<target name="dom3-core-oracle">
	<antcall target="run-oracle">
		<param name="level" value="3"/>
		<param name="module" value="core"/>
		<param name="jarname" value="dom3-core-xdk.jar"/>
	</antcall>
</target>

<target name="dom3-core-oracle-alt">
	<antcall target="run-oracle">
		<param name="level" value="3"/>
		<param name="module" value="core"/>
		<param name="jarname" value="dom3-core-xdk.jar"/>
		<param name="config" value="AltConfig"/>
	</antcall>
</target>

<target name="dom3-core-xerces">
	<antcall target="run-xerces">
		<param name="level" value="3"/>
		<param name="module" value="core"/>
	</antcall>
</target>

<target name="dom3-core-xerces-alt">
	<antcall target="run-xerces">
		<param name="level" value="3"/>
		<param name="module" value="core"/>
		<param name="config" value="AltConfig"/>
	</antcall>
</target>

<target name="dom3-core-results" depends="dom3-core-xerces, dom3-core-xerces-alt, dom3-core-oracle,dom3-core-oracle-alt">
    <mkdir dir="${build.dir}"/>
	<style in="${build.dir}/dom3-core-metadata.rdf" 
		   out="${build.dir}/dom3-core-results.html" 
	       style="transforms/results-matrix.xsl" force="true">
		<param name="specURI"
		       expression="http://www.w3.org/TR/2003/CR-DOM-Level-3-Core-20031107/core#"/>
        <param name="interfacesURL" expression="dom3-interfaces.xml"/>
        <param name="specMetadataURL" expression="dom3-core-subjects.xml"/>
        <param name="title" expression='DOM Level 3 Core Test Suite Matrix'/>
        <param name="resultsURL" expression="../transforms/dom3-core-results.xml"/>
	</style>
</target>


<target name="dom3-ls-xerces">
	<antcall target="run-xerces">
		<param name="level" value="3"/>
		<param name="module" value="ls"/>
	</antcall>
</target>

<target name="dom3-ls-oracle">
	<antcall target="run-oracle">
		<param name="level" value="3"/>
		<param name="module" value="ls"/>
		<param name="jarname" value="dom3-ls-xdk.jar"/>
	</antcall>
</target>

<target name="dom3-ls-results" depends="dom3-ls-oracle,dom3-ls-xerces">
    <mkdir dir="${build.dir}"/>
	<style in="${build.dir}/dom3-ls-metadata.rdf" 
		   out="${build.dir}/dom3-ls-results.html" 
	       style="transforms/results-matrix.xsl" force="true">
		<param name="specURI"
		       expression="http://www.w3.org/TR/2003/CR-DOM-Level-3-LS-20031107/load-save#"/>
        <param name="interfacesURL" expression="dom3-interfaces.xml"/>
        <param name="specMetadataURL" expression="dom3-ls-subjects.xml"/>
        <param name="resultsURL" expression="../transforms/dom3-ls-results.xml"/>
        <param name="title" expression='DOM Level 3 Load and Save Test Suite Results Matrix'/>
	</style>
</target>


</project>